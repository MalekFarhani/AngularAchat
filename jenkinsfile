pipeline{
    agent any

stages{

    stage('pulling the code'){
        steps{
        git branch: 'main', 
        url: 'https://github.com/MalekFarhani/AngularAchat'
}}
    stage('docker'){
        steps{ 
                sh 'docker build . -t malekkkk/achatang:1.0'  
}}
    stage('docker login'){
        steps {
                withCredentials([string(credentialsId: 'dockerhu', variable: 'dockerhubpd')]) {      
                        sh "echo \$dockerHubPwd | docker login -u malekkkk --password-stdin"
            }}}
   
    stage ('docker push'){
        steps{
            sh 'docker push malekkkk/achatang:1.0'  //docker push your-username/my-app:latest
        }
    }
}}   